<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ford.sa.campuspartyexample.MainActivity"
    tools:showIn="@layout/activity_main">



    <ImageView
        android:id="@+id/imgCampusParty"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/campusparty"/>


    <Button
        android:id="@+id/btnDadosGetData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgCampusParty"
        android:layout_marginTop="64dp"
        android:text="Collected Data List"
        android:theme="@style/PrimaryButton" />


    <Button
        android:id="@+id/btnHealth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgFord"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="95dp"
        android:text="Health"
        android:theme="@style/PrimaryButton" />

    <ImageView
        android:id="@+id/imgFord"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/fordicon"/>









</RelativeLayout>
